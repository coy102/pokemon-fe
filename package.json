{
  "name": "next-ts-boilerplate",
  "author": "@fajarsep12dev",
  "license": "MIT",
  "version": "1.0.0",
  "scripts": {
    "build": "next build",
    "build-storybook": "build-storybook",
    "docker:build-prod": "docker build -f ./scripts/Dockerfile .",
    "start": "node ./scripts/server.js",
    "format": "prettier --write .",
    "lint": "eslint . --ext ts --ext tsx --ext js",
    "lint:fix": "yarn lint --fix && yarn format",
    "test": "cross-env NODE_ENV=test jest --config scripts/jest.config.js --runInBand",
    "test:coverage": "cross-env NODE_ENV=test jest --config scripts/jest.config.js --collectCoverage --runInBand",
    "tsc": "tsc --pretty --noEmit",
    "storybook": "start-storybook -p 6006"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.@(ts|tsx)": [
      "yarn lint",
      "git add --force"
    ]
  },
  "dependencies": {
    "@apollo/client": "^3.5.0",
    "@emotion/cache": "^11.10.1",
    "@emotion/react": "^11.10.0",
    "@emotion/server": "^11.10.0",
    "@emotion/styled": "^11.10.0",
    "@mui/icons-material": "^5.8.4",
    "@mui/material": "^5.9.3",
    "dayjs": "^1.11.4",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "graphql": "^16.5.0",
    "lodash": "^4.17.21",
    "next": "^10.1.3",
    "next-pwa": "^5.2.14",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-lazyload": "^3.2.0",
    "uniqid": "^5.4.0",
    "yup": "^0.32.9"
  },
  "devDependencies": {
    "@babel/core": "^7.13.15",
    "@emotion/babel-plugin": "11.0.0",
    "@storybook/addon-actions": "^5.3.12",
    "@storybook/addon-backgrounds": "^5.3.12",
    "@storybook/addon-info": "^5.3.21",
    "@storybook/addon-knobs": "^5.3.12",
    "@storybook/addon-links": "^5.3.12",
    "@storybook/addon-options": "^5.3.21",
    "@storybook/addon-storysource": "^5.3.12",
    "@storybook/addons": "^5.3.12",
    "@storybook/react": "^5.3.12",
    "@testing-library/react": "^11.2.6",
    "@testing-library/react-hooks": "^8.0.1",
    "@types/jest": "^26.0.22",
    "@types/js-cookie": "^2.2.6",
    "@types/node": "^14.14.41",
    "@types/react": "^17.0.3",
    "@types/yup": "^0.29.9",
    "@typescript-eslint/eslint-plugin": "^4.1.1",
    "@typescript-eslint/parser": "^4.1.1",
    "babel-jest": "^26.6.3",
    "babel-loader": "^8.2.2",
    "cross-env": "^7.0.2",
    "eslint": "^7.9.0",
    "eslint-config-airbnb-typescript": "^12.3.1",
    "eslint-config-prettier": "^8.2.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "eslint-plugin-react": "^7.20.6",
    "eslint-plugin-react-hooks": "^4.1.2",
    "eslint-plugin-unused-imports": "^1.1.0",
    "husky": "^4.2.3",
    "jest": "^26.6.3",
    "lint-staged": "^10.0.10",
    "prettier": "^2.0.2",
    "ts-jest": "^26.5.4",
    "typescript": "^4.2.4"
  }
}
